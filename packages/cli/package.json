{
  "name": "@quickfra/cli",
  "version": "0.1.0",
  "description": "QuickFra CLI - Automated platform deployment tool",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "quickfra": "./bin/quickfra.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "keywords": [
    "cli",
    "deployment",
    "infrastructure",
    "coolify",
    "devops",
    "automation"
  ],
  "author": "Diego Rodriguez",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/quickfra/quickfra.git",
    "directory": "packages/cli"
  },
  "dependencies": {
    "@oclif/core": "^4.0.19",
    "@oclif/plugin-help": "^6.2.8",
    "@oclif/plugin-plugins": "^5.4.7",
    "chalk": "^5.3.0",
    "ora": "^8.1.0",
    "zod": "^3.23.8",
    "node-fetch": "^3.3.2",
    "@quickfra/config": "workspace:*",
    "@quickfra/logger": "workspace:*",
    "@quickfra/types": "workspace:*",
    "@quickfra/utils": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1",
    "eslint": "^9.11.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "oclif": {
    "bin": "quickfra",
    "dirname": "quickfra",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "up": {
        "description": "Deploy platform with selected services"
      }
    }
  },
  "files": [
    "dist",
    "bin",
    "npm-shrinkwrap.json",
    "oclif.manifest.json"
  ]
}
