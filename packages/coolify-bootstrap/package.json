{
  "name": "@quickfra/coolify-bootstrap",
  "version": "1.0.0",
  "description": "Coolify bootstrap installer for Quickfra",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "type-check": "tsc --noEmit",
    "lint": "biome lint src",
    "format": "biome format src --write"
  },
  "dependencies": {
    "@quickfra/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "tsup": "^8.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
