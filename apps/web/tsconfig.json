{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@quickfra/core": [
        "../../packages/core/src"
      ],
      "@quickfra/db": [
        "../../packages/db/src"
      ],
      "@quickfra/logger": [
        "../../packages/logger/src"
      ],
      "@quickfra/utils": [
        "../../packages/utils/src"
      ],
      "@quickfra/types": [
        "../../packages/types/src"
      ],
      "@quickfra/config": [
        "../../packages/config/src"
      ],
      "@quickfra/auth": [
        "../../packages/auth/src"
      ]
    },
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.mjs"
  ],
  "exclude": [
    "node_modules"
  ]
}
